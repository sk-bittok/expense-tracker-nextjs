generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model UserSettings {
  userId   String @id
  currency String
}

model Category {
  userId    String
  name      String
  createdAt DateTime @default(now())
  icon      String
  type      String   @default("income")

  @@unique([name, userId, type])
}

model Transaction {
  id           String   @id @default(uuid())
  amount       Float
  description  String
  date         DateTime
  userId       String
  type         String   @default("income")
  category     String
  categoryIcon String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}

model MonthHistory {
  userId  String
  day     Int
  month   Int
  year    Int
  income  Float
  expense Float

  @@id([day, month, year, userId])
}

model YearHistory {
  userId  String
  month   Int
  year    Int
  income  Float
  expense Float

  @@id([month, year, userId])
}
